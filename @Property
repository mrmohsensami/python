"""
    @property
"""
class Person:
    def __init__(self, fname, lname):
        self.fname = fname
        self.lname = lname

    @property
    def full_name(self):
        return f'{self.fname} {self.lname}'

    @property
    def email(self):
        return f'self.fname_{self.lname}@email.com'


a = Person('mohsen', 'sami')
a.fname = 'ali'

print(a.fname)
print(a.lname)
print(a.email)
print(a.full_name)
